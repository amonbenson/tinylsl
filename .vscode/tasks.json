{
    "tasks": [
        {
            "label": "build tinylsl_test",
            "type": "cppbuild",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Werror",
                "-Og",
                "-g",
                "-Iinclude",
                "-Itests",
                "-o",
                "build/tinylsl_test",
                "**/*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
